#!/usr/bin/env bash
# Script to display DNS info for subdomains

domain=$1
subdomains=("www" "lb-01" "web-01" "web-02")

# Check if domain was provided
if [ -z "$domain" ]; then
    echo "Usage: $0 domain_name [subdomain]"
    exit 1
fi

check_subdomain() {
    sub=$1
    # Get the A record IP directly
    ip=$(dig +short "$sub.$domain" | head -n1)
    echo "$ip"
}

# If a second argument is provided, only check that subdomain
if [ $# -eq 2 ]; then
    check_subdomain "$2"
else
    # Otherwise, check all subdomains
    for sub in "${subdomains[@]}"; do
        check_subdomain "$sub"
    done
fi
